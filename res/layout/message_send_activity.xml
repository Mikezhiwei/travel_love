<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background14"
    android:orientation="vertical" >
       
       
        <LinearLayout 
         android:layout_width="fill_parent"
         android:layout_height="50dp"
         android:gravity="left"
         android:background="@android:color/transparent">
             <ImageButton 
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:id="@+id/cancel_msg_btn"
                 android:layout_marginTop="5dp"
                 android:layout_marginLeft="15dp"
                 android:background="@drawable/back_btn"
                   />
             <TextView 
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textColor="#ffffff"
               android:text="发 消 息"
               android:textSize="20dp"
               android:layout_marginLeft="70dp"
               android:id="@+id/show_calendar_text"
               android:layout_marginTop="15dp"
               />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal" 
                android:layout_width="fill_parent"
                android:layout_marginTop="50dp"
                android:layout_height="wrap_content">
                <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="目的地"
                    android:gravity="center"
                    android:layout_marginLeft="10dp"
                    android:textSize="20dp"
                    android:textColor="@color/green_define"
                    />
                <LinearLayout
                    android:layout_marginLeft="10dp"
                    android:layout_height="wrap_content" 
                    android:layout_marginRight="20dp"
                    android:orientation="vertical"
                    android:layout_width="fill_parent">
                         <LinearLayout 
                             android:layout_width="fill_parent"
                             android:orientation="horizontal"
                             android:layout_height="wrap_content">
                              <TextView 
                                  android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:layout_marginLeft="20dp"
                                  android:textColor="#000000"
                                  android:textSize="15sp"
                                  android:id="@+id/desnetion"
                                  android:visibility="gone"/>
                              <ImageView 
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:src="@drawable/right_arrow_input"
                              android:id="@+id/destination_input"
                              android:layout_marginLeft="100dp"/>
                         </LinearLayout>
                       
                          <TextView 
                              android:layout_width="fill_parent"
                              android:layout_height="1dp"
                              android:background="@color/green_define"/>
                </LinearLayout>
            </LinearLayout>
               <LinearLayout
                android:orientation="horizontal" 
                android:layout_width="fill_parent"
                android:layout_marginTop="30dp"
                android:layout_height="wrap_content">
                <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="出发地"
                    android:gravity="center"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/green_define"
                    android:textSize="20dp"
                    />
                <LinearLayout
                    android:layout_marginLeft="10dp"
                    android:layout_height="wrap_content" 
                    android:layout_marginRight="20dp"
                    android:orientation="vertical"
                    android:layout_width="fill_parent">
                            <LinearLayout 
                             android:layout_width="fill_parent"
                             android:orientation="horizontal"
                             android:layout_height="wrap_content">
                                <TextView 
                                  android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:layout_marginLeft="20dp"
                                  android:textColor="#000000"
                                  android:textSize="15sp"
                                  android:id="@+id/startring"
                                  android:visibility="gone"/>
                         <ImageView 
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:src="@drawable/right_arrow_input"
                              android:id="@+id/starting_input"
                              android:layout_marginLeft="100dp"/>
                         </LinearLayout>
                          <TextView 
                              android:layout_width="fill_parent"
                              android:layout_height="1dp"
                              android:background="@color/green_define"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal" 
                android:layout_width="fill_parent"
                android:layout_marginTop="30dp"
                android:layout_height="wrap_content">
                <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="旅游时间段"
                    android:gravity="center"
                    android:inputType="text"
                    android:textColor="@color/green_define"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:textSize="20dp"
                    />
                    <LinearLayout 
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="30dp"
                        >
                        <Button 
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.0"
                            android:singleLine="true"
                            android:background="@drawable/bt_bgd"
                            android:textColor="#ffffff"
                            android:textSize="15dp"
                            android:text="起始时间"
                            android:id="@+id/startday"/>
                         <Button 
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.0"
                            android:layout_marginLeft="20dp"
                            android:background="@drawable/bt_bgd"
                            android:textColor="#ffffff"
                            android:text="结束时间"
                            android:singleLine="true"
                             android:textSize="15dp"
                            android:id="@+id/endday"/>
                    </LinearLayout>
               </LinearLayout>
            
            <LinearLayout 
                android:layout_marginTop="20dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="90dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/login_border">
                        <EditText 
                            android:inputType="textMultiLine"
                            android:gravity="top"
                            android:minLines="4"
                            android:id="@+id/requestment"
                            android:layout_width="fill_parent"
                            android:layout_height="90dp"
                            android:hint="出游方式，人数限制，对队友的需求..."
                            android:background="@drawable/input_layout"
                            />
            </LinearLayout>
            <LinearLayout 
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                >
                     <Button 
                         android:layout_width="wrap_content"
                         android:layout_height="30dp"
                         android:textColor="@color/white"
                         android:layout_weight="1.0"
                         android:text="发布"
                         android:id="@+id/decaltionbtn"
                         android:background="@drawable/msg_btn"
                         />   
          </LinearLayout>
</LinearLayout>
